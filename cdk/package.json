{
	"name": "cdk",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "tsc",
		"test": "jest",
		"test-update": "jest -u",
		"prettier:check": "prettier --check \"{lib,bin}/**/*.ts\"",
		"prettier:fix": "prettier --write \"{lib,bin}/**/*.ts\"",
		"lint": "eslint lib/** bin/** --no-error-on-unmatched-pattern",
		"synth": "cdk synth --path-metadata false --version-reporting false",
		"diff": "cdk diff --path-metadata false --version-reporting false"
	},
	"devDependencies": {
		"@guardian/cdk": "61.3.2",
		"@guardian/eslint-config": "^12.0.1",
		"@guardian/prettier": "10.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "25.2.3",
		"aws-cdk": "2.1005.0",
		"aws-cdk-lib": "2.189.1",
		"constructs": "10.5.1",
		"eslint": "^9.26.0",
		"globals": "^17.0.0",
		"jest": "^30.2.0",
		"prettier": "^3.7.4",
		"source-map-support": "^0.5.20",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.8.2",
		"typescript": "~5.7.3"
	},
	"prettier": "@guardian/prettier",
	"jest": {
		"testMatch": [
			"<rootDir>/lib/**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"setupFilesAfterEnv": [
			"./jest.setup.js"
		]
	}
}
